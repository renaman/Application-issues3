<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h2>User search for 'test'</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% if @users %>
							<% @users.each do |user| %>
							<tr>
								<td>
									<%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
								</td>
								<td>
									<%= user.name %>
								</td>
								<td>
									<%= link_to "Show", user_path(user) %>
								</td>
							</tr>
							<% end %>
						<% elsif @books %>
							<% @books.each do |book| %>
							<tr>
								<td>
									<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
								</td>
								<td>
									<%= book.user.name %>
								</td>
								<td>
									<%= link_to "Show", user_path(book.user) %>
								</td>
							</tr>
					<% end %>
					<% end %>

					</tbody>
				</table>
		</div>
	</div>
</div>